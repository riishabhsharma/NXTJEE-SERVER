    <!-- Main Form Section -->
    <section id="submit" class="form-section">
      <div class="container">
        <div class="form-container">
          <div class="section-header">
            <h2 class="section-title">Submit Your Answer Key</h2>
            <p class="section-description">
              Enter your details below to submit your JEE answer key for verification and analysis.
            </p>

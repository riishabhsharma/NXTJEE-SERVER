          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Answer Key Submission</h3>
              <p class="card-description">
                Please fill in all the required information accurately
              </p>
            </div>
            <div class="card-content">
              <div id="success-message" class="success-message hidden">
                <div class="success-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <h3 class="success-title">Successfully Submitted!</h3>
                <p class="success-description">Your answer key has been received and is being processed.</p>
              </div>

              <form id="answer-key-form" class="submission-form" method="POST" action="/">
                <!-- Answer Key Link -->
                <div class="form-group">
                  <label for="answerKeyLink" class="form-label">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                      stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                    </svg>
                    Answer Key Link
                  </label>
                  <input id="answerKeyLink" type="url" name="answerKeyLink" placeholder="https://cdn3.digialm.com/..." required class="form-input" />
                  <p class="form-hint">Enter the complete URL of your answer key document</p>
                </div>

                <!-- Exam Date -->
                <div class="form-group">
                  <label for="examDate" class="form-label">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                      stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    Exam Date
                  </label>
                  <select id="shift" name="examDate" required class="form-select">
                    <option value="" disabled selected>Select your exam date</option>
                    <option value="22 January 2025">22 January 2025</option>
                    <option value="23 January 2025">23 January 2025</option>
                    <option value="24 January 2025">24 January 2025</option>
                    <option value="28 January 2025">28 January 2025</option>
                    <option value="29 January 2025">29 January 2025</option>
                    

                  </select>
                </div>

                <!-- Shift Selection -->
                <div class="form-group">
                  <label for="shift" class="form-label">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                      stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="10"></circle>
                      <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    Exam Shift
                  </label>
                  <select id="shift" name="shift" required class="form-select">
                    <option value="" disabled selected>Select your exam shift</option>
                    <option value="Morning Shift (9:00 AM - 12:00 PM)">Morning Shift (9:00 AM - 12:00 PM)</option>
                    <option value="Evening Shift (3:00 PM - 6:00 PM)">Evening Shift (3:00 PM - 6:00 PM)</option>
                  </select>
                </div>

                <!-- Submit Button -->
